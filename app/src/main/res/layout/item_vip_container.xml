<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_vip_bg"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/shape_vip_bg"
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <TextView
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:text="永久卡"
            android:id="@+id/tv_vip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="19.9元"
            android:layout_marginBottom="9dp"
            android:layout_below="@+id/tv_vip_title"
            android:id="@+id/tv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_centerHorizontal="true"
            android:text="原价：30元"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_vip_price"
            android:id="@+id/tv_vip_hint"
            android:layout_width="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="17dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>