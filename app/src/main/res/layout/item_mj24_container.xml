<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_item24_date"
        android:layout_centerHorizontal="true"
        android:text="11:00"
        android:textSize="15sp"
        android:textColor="@color/color_homeTextNormal"
        android:layout_below="@+id/iv_item24_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_item24_icon"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/shachen"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_item24_team"
        android:layout_width="28dp"
        android:layout_height="28dp"/>

    <TextView
        android:id="@+id/tv_item_wea"
        android:textColor="@color/black"
        android:text="多云"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_item24_team"
            android:layout_centerHorizontal="true"
            android:text="28"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/color_homeTextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item24_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item24_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="6级"
            android:visibility="gone"
            android:textColor="@color/color_rv_text"
            android:textSize="13sp" />

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/iv_item24_direction"
            android:layout_centerHorizontal="true"
            android:text="东南风"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@color/color_rv_text"
            android:layout_below="@+id/tv_item24_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</LinearLayout>