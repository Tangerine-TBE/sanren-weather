<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.nanjing.tqlhl.ui.activity.RegisterActivity">


    <include android:id="@+id/change_bar" layout="@layout/layout_toolbar_new"/>


    <TextView
        android:layout_marginTop="62dp"
        android:text="找回密码"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/change_bar"
        android:id="@+id/change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.nanjing.tqlhl.ui.custom.LoginView
        android:layout_marginTop="34dp"
        android:id="@+id/find_pwd_view"
        android:layout_below="@id/change_title"
        app:passwordLength="32"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>